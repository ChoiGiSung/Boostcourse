<?xml version="1.0" encoding="UTF-8"?>


<web-app>
	<display-name>Spring JavaConfig Sample</display-name>
	<context-param>
		<param-name>contextClass</param-name>
		<param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext
		</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>fullstack.config.ApplicationConfig
		</param-value>
	</context-param>
	<!-- 설정 파일을 여러개 만들어서 -> 리액션 이니 파일 여러개 알려주기 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>




  <servlet>
    <servlet-name>mvc</servlet-name> 	<!-- forncontroler는 dispat로 할꺼야 -->
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextClass</param-name> <!-- 빈 공장이 이썽야해 -->
      <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </init-param>
    
    <!-- 자신의 설정 파일 위치를 다시 설정 -->
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>fullstack.config.WebMvcContextConfiguration</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>mvc</servlet-name>
    <url-pattern>/</url-pattern> <!-- url이 /로 들어오면 mvc  실행해 위쪽에 있어 -->
  </servlet-mapping>


<!-- 요청이 들어오기전 나가기전에 한번씩 필터 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>
